/* 水平间距 */
.scroll-view-container {
  display: flex;
}
.scroll-view-container .left-scroll-view {
  width: 120px;
}
.scroll-view-container .left-scroll-view .left-scroll-view-item {
  line-height: 60px;
  background-color: #e6e6e6;
  text-align: center;
  font-size: 12px;
}
.scroll-view-container .left-scroll-view .left-scroll-view-item.active {
  background-color: #fff;
  position: relative;
}
.scroll-view-container .left-scroll-view .left-scroll-view-item.active::before {
  content: '';
  display: block;
  width: 3px;
  height: 30px;
  background-color: #c00000;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.scroll-view-container .right-scroll-view {
  background-color: #fff;
}
.scroll-view-container .cate-lv2-title {
  text-align: center;
}
.scroll-view-container .cate-lv3-list {
  display: flex;
  flex-wrap: wrap;
}
.scroll-view-container .cate-lv3-list .cate-lv3-item {
  width: 33.33%;
  display: flex;
  margin-bottom: 10px;
  flex-direction: column;
  align-items: center;
}
.scroll-view-container .cate-lv3-list .cate-lv3-item image {
  width: 60px;
  height: 60px;
}
.scroll-view-container .cate-lv3-list .cate-lv3-item text {
  font-size: 12px;
}

