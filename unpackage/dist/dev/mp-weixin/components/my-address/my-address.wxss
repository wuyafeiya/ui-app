/* 水平间距 */
.address-choose-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90px;
}
.address-choose-box .btnChooseAddress {
  line-height: 40px;
}
.address-border {
  width: 100%;
  height: 10px;
}
.address-info-box {
  font-size: 12px;
  height: 90px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5px;
}
.address-info-box .row1 {
  display: flex;
  justify-content: space-between;
}
.address-info-box .row1 .row1-right {
  display: flex;
  align-items: center;
}
.address-info-box .row1 .row1-right .phone {
  margin-right: 5px;
}
.address-info-box .row2 {
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.address-info-box .row2 .row2-left {
  white-space: nowrap;
}

